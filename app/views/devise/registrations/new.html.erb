



<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class=> "form-horizontal"}) do |f| %>
<fieldset>

<!-- Form Name -->
<legend>Sign Up</legend>

<!-- Text input-->
<div class="form-group">
  
<%= f.error_notification %>

  <label class="col-md-4 control-label" for="username">Username</label>  
  <div class="col-md-4">
  <%= f.input :email, required: true, autofocus: true, label: false, :input_html => {:class=>"form-control input-md"} %>
  
    
  </div>
</div>

<!-- Password input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="passwordinput"></label>
  <div class="col-md-4">
  
     <%= f.input :password, required: true, autofocus: true, :input_html => {:class=>"form-control input-md"} %>
     <%= f.input :password_confirmation, required: true, autofocus: true, :input_html => {:class=>"form-control input-md"} %>
    
  </div>

</div>


<!-- Button (Double) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="button1id"></label>
  <div class="col-md-8">
     <%= f.button :submit, "Create Account", :input_html=> {:class=>"btn btn-default"} %>
  
  </div>
</div>

<%= render "devise/shared/links" %>
</fieldset>

<% end %>


