<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class=> "form-horizontal"}) do |f| %>
<fieldset>

<!-- Form Name -->
<legend>Login</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="username">Username</label>  
  <div class="col-md-4">
  <%= f.input :email, required: true, autofocus: true, label: false, :input_html => {:class=>"form-control input-md"} %>
  
    
  </div>
</div>

<!-- Password input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="passwordinput">Password</label>
  <div class="col-md-4">
  
     <%= f.input :password, required: true, autofocus: true, label: false, :input_html => {:class=>"form-control input-md"} %>
    
  </div>

</div>


<!-- Button (Double) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="button1id"></label>
  <div class="col-md-8">
     <%= f.button :submit, "Sign in", :input_html=> {:class=>"btn"} %>
     <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
</div>

<%= render "devise/shared/links" %>
</fieldset>

<% end %>

