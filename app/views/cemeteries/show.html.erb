<%- model_class = Cemetery -%>
<div class="page-header">
  <h1><%= @cemetery.name %></h1>
</div>
<div class='row'>
<div class="col-md-8">
  <div class="row">
    <div class="col-md-4">
    <%= image_tag @cemetery.logo(:medium) %>
    </div>
    <div class="col-md-4">
      <%= @cemetery.address %>
      <%= @cemetery.address_two %>
      <%= @cemetery.city %>
      <%= @cemetery.state %>
      <%= @cemetery.zip %>
    </div>
  </div>
  
</div>
<div class="col-md-4">
 <div class="well sidebar-nav">
              <ul class="nav nav-list">
                <li class="nav-header">Cemetery Menu</li>
                <li><%= link_to "Browse Graves", cemetery_plots_path(@cemetery)  %></li>
                <li><%= link_to "Add a Grave", new_cemetery_plot_path(@cemetery)  %></li>

              </ul>
  </div><!--/.well -->
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cemeteries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cemetery_path(@cemetery), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cemetery_path(@cemetery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
</div>
  

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><div style="overflow:hidden;height:500px;width:600px;"><div id="gmap_canvas" style="height:500px;width:600px;"></div><a class="google-map-code" href="http://www.map-embed.com" id="get-map-data">map-embed.com</a><style>#gmap_canvas img{max-width:none!important;background:none!important}</style></div><script type="text/javascript"> function init_map(){var myOptions = {zoom:14,center:new google.maps.LatLng(<%=@cemetery.latitude%>,<%=@cemetery.longitude%>),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(<%=@cemetery.latitude%>,<%=@cemetery.longitude%>)});infowindow = new google.maps.InfoWindow({content:"<b><%= @cemetery.name %></b><br/><%= @cemetery.full_street_address %>" });google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);</script>
