<%- model_class = Cemetery -%>
<div class="page-header">
  <h1><%= @cemetery.name %></h1>
</div>
<div class='row'>
<div class="span9">
  <div class="row">
    <div class="span4">
    <%= image_tag @cemetery.logo(:medium) %>
    </div>
    <div class="span5">
      <%= @cemetery.address %>
      <%= @cemetery.address_two %>
      <%= @cemetery.city %>
      <%= @cemetery.state %>
      <%= @cemetery.zip %>
    </div>
  </div>
  
</div>
<div class="span3">
 <div class="well sidebar-nav">
              <ul class="nav nav-list">
                <li class="nav-header">Cemetery Menu</li>
                <li><%= link_to "Browse Graves", cemetery_plots_path(@cemetery)  %></li>
                <li><%= link_to "Add a Grave", new_cemetery_plot_path(@cemetery)  %></li>

              </ul>
  </div><!--/.well -->
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cemeteries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cemetery_path(@cemetery), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cemetery_path(@cemetery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
</div>
  

