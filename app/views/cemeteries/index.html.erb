<%- model_class = Cemetery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="row">
<div class="span9">
<table class="table table-striped span8">
  <thead>
    <tr>
      <th></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cemeteries.each do |cemetery| %>
      <tr>
        <td><%= image_tag cemetery.logo(:thumb) %></td>
        <td><%= link_to cemetery.name, cemetery_path(cemetery) %></td>
        <td><%= cemetery.city %></td>
        <td><%= cemetery.state %></td>
        <td><%=l cemetery.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cemetery_path(cemetery), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cemetery_path(cemetery),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="span2 well sidebar-nav">
<%= link_to "Add a Cemetery",
            new_cemetery_path,
            :class => 'btn btn-primary' %>
</div>
</div>


